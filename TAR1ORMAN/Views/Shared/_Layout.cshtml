<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TARELCO I Application</title>

    @Styles.Render("~/Content/css")

    <script src="~/Scripts/jquery-3.6.0.js"></script>

    @Scripts.Render("~/bundles/modernizr")

    @* CSS FILES FOR JQUERY DATATABLE*@
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

    @*sweet alert*@
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    @*end of sweet alert*@

    <style type="text/css">
        a {
            text-decoration: none !important;
        }
    </style>

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="padding-top:18px;">
                <p><strong><font style="color:antiquewhite;">ELECTRONIC BILLING AND COLLECTION SYSTEM</font></strong></p>
            </div>

            <div class="nav navbar-nav navbar-right" style="padding-top:18px;">
                <p><strong><a href='@Url.Action("Logout","Authentication")' id="mnulogout">Logout&nbsp;</a></strong></p>
            </div>
            <div class="nav navbar-nav navbar-right" style="padding-top:18px;">
                <p><strong><a href='@Url.Action("DBSettings","Settings")' id="mnudbsettings">DBSettings&nbsp;</a></strong></p>
            </div>

        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tarelco I Billing Application</p>
        </footer>
    </div>

    @*//JavaScript Files*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerydt")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/jszip.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>

    <script src="~/Scripts/sweetalert.min.js"></script>


    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        var idleTime = 0;
        $(document).ready(function () {
            //Increment the idle time counter every minute.
            var idleInterval = setInterval(timerIncrement, 180000); // 1 minute

            //Zero the idle timer on mouse movement.
            $(this).mousemove(function (e) {
                idleTime = 0;
            });
            $(this).keypress(function (e) {
                idleTime = 0;
            });
        });

        function timerIncrement() {
            idleTime = idleTime + 1;
            if (idleTime > 3) { // 3 minutes
                window.location = "/Authentication/Logout";
            }
        }
    </script>
</body>
</html>
