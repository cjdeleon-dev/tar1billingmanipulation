
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/myscripts/meterbrandscript_v0.0.0.1.js"></script>

<h2>Meter Brands</h2>

<div class="row">
    <div class="col-lg-2">
        <button class="btn btn-warning" id="btnBack" onclick="location.href='@Url.Action("Index","Home")'"><i class="glyphicon glyphicon-arrow-left"></i> Back</button>
    </div>
</div>

<br />

<div class="table-responsive-sm">
    <table class="table table-hover table-bordered" id="myTable1">
        <thead class="bg-primary">
            <tr>
                <th>Id</th>
                <th>Meter Brand</th>
                <th class="text-center">Is Active</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal fade" id="myTListModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myTListModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 class="modal-title" id="mymyTListModalLabel">Meter Brand</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="form-group col-lg-3 text-center" style="padding-top:2em;">
                            <input type="checkbox" id="chkIsActive" class="text-center" style="pointer-events:none;" />
                            <label>Is Active</label>
                        </div>
                        <div class="form-group col-lg-2">
                            <label>ID:</label>
                            <input type="text" id="txtId" class="form-control" readonly />
                        </div>
                        <div class="form-group col-lg-6">
                            <label>METER BRAND:</label>
                            <input type="text" id="txtMeterBrand" class="form-control" readonly />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                        <h4>METER TYPE(S)</h4>
                        @*<div class="table-responsive">*@
                        <table class="table-hover table-bordered" id="myTypesTable" style="min-width:100%;">
                            <thead class="bg-primary">
                                <tr>
                                    <th class="text-center" style="max-width:5px;">ID</th>
                                    <th class="text-center">METER TYPE</th>
                                    <th class="text-center">IS ACTIVE</th>
                                </tr>
                            </thead>
                        </table>
                        <!--</div>-->
                    </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-warning" data-dismiss="modal" value="CLOSE" />
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalLoading" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="spin-container">
            <div class="spin" id="loader"></div>
            <div class="spin" id="loader2"></div>
            <div class="spin" id="loader3"></div>
            <div class="spin" id="loader4"></div>
            <span id="spintext">LOADING...</span>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(loadAllData());
    </script>
}

