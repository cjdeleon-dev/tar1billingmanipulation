
@{
    ViewBag.Title = "Approval of Change Name Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/sweetalert.css" rel="stylesheet" />

<script src="~/Scripts/myscripts/sweetalert.js"></script>

<script src="~/Scripts/myscripts/cnapprovallistscript_v1.1.1.js"></script>

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />


<style>
    .dataTables tbody tr {
        min-height: 30px; /* or whatever height you need to make them all consistent */
    }

    #myTable1 {
        font-size: 12px;
    }
</style>

<h2><strong>CHANGE NAME LIST FOR APPROVAL</strong></h2>


<div class="row">
    <div class="col-lg-2">
        <button class="btn btn-warning" id="btnBack" onclick="location.href='@Url.Action("Index","ChangeNameApplication")'"><i class="glyphicon glyphicon-arrow-left"></i> Application for Change Name</button>
        <input type="hidden" id="txtCurrentRole" class="form-control" value=@ViewBag.Message />
    </div>
</div>

<br />
<div class="table-responsive-sm">
    <table class="table table-hover table-bordered" id="myTable1">
        <thead class="bg-primary">
            <tr>
                <th scope="col" style="text-align:center;">Ref ID</th>
                <th scope="col" style="text-align:center;">Account #</th>
                <th scope="col" style="text-align:center;">Name</th>
                <th scope="col" style="text-align:center;">App Date</th>
                <th scope="col" style="text-align:center;">Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(loadList());
    </script>
}