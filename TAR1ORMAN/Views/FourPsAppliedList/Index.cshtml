
@{
    ViewBag.Title = "Four P's List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/sweetalert.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/myscripts/fourpslistscript_v1.0.0.1.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/myscripts/sweetalert.js"></script>

<style>
    /*.dataTables tbody tr {
        min-height: 30px;  or whatever height you need to make them all consistent
        font-size: 9px !important;
    }*/

    /*#myTable1 {*/

    /*}*/
    .table.dataTable td, th {
        font-size: 12px !important;
    }
</style>

<h2><strong>FOUR P's APPLIED LIST</strong></h2>

<div class="row">
    <div class="col-lg-2">
        <button class="btn btn-warning" id="btnBack" onclick="location.href='@Url.Action("FourPsVerify","FourPsApplication")'"><i class="glyphicon glyphicon-arrow-left"></i> Four P's Application</button>
        <input type="hidden" id="txtCurrentRole" class="form-control" value=@ViewBag.Message />
    </div>
</div>

<br />
<div class="table-responsive-sm">
    <table class="table table-hover table-bordered" id="myTable1">
        <thead class="bg-primary">
            <tr>
                <th scope="col" style="text-align:center;">Id</th>
                <th scope="col" style="text-align:center;">DateApplied</th>
                <th scope="col" style="text-align:center;">IsQualified</th>
                <th scope="col" style="text-align:center;">Surname</th>
                <th scope="col" style="text-align:center;">Givenname</th>
                <th scope="col" style="text-align:center;">Middlename</th>
                <th scope="col" style="text-align:center;">Address</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal fade" id="myRptFormModal" tabindex="-1" role="dialog" aria-labelledby="myRptFormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="@Url.Action("FourPsAppliedList","Index")">X</button>
                <h4 class="modal-title" id="myRptFormModalLabel">4Ps LIFELINER APPLICATION FORM</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <embed src="" width="100" height="500" type="application/pdf" id="fourpsqmepdf" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="@Url.Action("FourPsAppliedList","Index")">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(loaddata());
    </script>
}