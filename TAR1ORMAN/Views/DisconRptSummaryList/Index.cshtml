
@{
    /**/

    ViewBag.Title = "Summary Of Disconnection Report List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="~/Content/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/myscripts/sweetalert.js"></script>

<script src="~/Scripts/myscripts/summaryofdtdlist_v1.0.0.js"></script>

<style>
    .dataTables tbody tr {
        min-height: 30px; /* or whatever height you need to make them all consistent */
    }

    #myTable1 {
        font-size: 12px;
    }
</style>

<h2><strong>SUMMARY OF DISCONNECTION REPORT LIST</strong></h2>


<div class="row">
    <div class="col-lg-2">
        <button class="btn btn-warning" id="btnBack" onclick="location.href='@Url.Action("Index","Home")'"><i class="glyphicon glyphicon-arrow-left"></i> Home</button>
        <input type="hidden" id="txtCurrentRole" class="form-control" value=@ViewBag.Message />
    </div>
</div>
<br />
<div class="container" id="divSummaryDisconRptList">

    <div class="row">
        <div class="col-lg-12">
            <table id="myTable1" class="table table-hover table-bordered table-responsive">
                <thead class="bg-primary">
                    <tr>
                        <th scope="col" style="text-align:center;">Id</th>
                        <th scope="col" style="text-align:center;">Gen Date Time</th>
                        <th scope="col" style="text-align:center;">Generated By</th>
                        <th scope="col" style="text-align:center;">Route Id</th>
                        <th scope="col" style="text-align:center;">Checked By</th>
                        <th scope="col" style="text-align:center;">Noted By</th>
                        <th scope="col" style="text-align:center;"></th> @*view report*@
                    </tr>
                </thead>
            </table>
        </div>
    </div>

</div>

@*Modal for Report*@

<div class="modal fade" id="myRptModal" tabindex="-1" role="dialog" aria-labelledby="myRptModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 class="modal-title" id="myRptModalLabel">Summary Of Disconnection Report</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <embed src="" width="100" height="500" type="application/pdf" id="sodrpdf" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(loadPage());
    </script>
}